    <h3>Create a new brand</h3>
    <form method="post" action="/categories/store">
        <div class="form-group">
            <label for="exampleInputEmail1">Name brand</label>
            <input type="text" name="nameCategory" class="form-control" aria-describedby="nameBrand"
                placeholder="Enter name brand">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Link image</label>
            <input type="text" name="image" class="form-control" aria-describedby="imageBrand"
